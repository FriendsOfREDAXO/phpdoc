    <transformation query="copy" writer="FileIo" source="templates/redaxo/css" artifact="css"/>
    <transformation query="copy" writer="FileIo" source="templates/redaxo/js" artifact="js"/>
    <transformation query="copy" writer="FileIo" source="templates/redaxo/font" artifact="font"/>
