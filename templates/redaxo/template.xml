    <transformation writer="twig" query="indexes.namespaces" source="templates/redaxo/namespace.html.twig" />
    <transformation writer="twig" query="indexes.classes" source="templates/redaxo/class.html.twig" />
    <transformation writer="twig" query="indexes.interfaces" source="templates/redaxo/interface.html.twig" />
    <transformation writer="twig" query="indexes.traits" source="templates/redaxo/class.html.twig" />
    <transformation writer="twig" query="files" source="templates/redaxo/file.html.twig" />
    <transformation writer="twig" query="files" source="templates/redaxo/file.source.txt.twig" artifact="files/{{path}}.txt"/>
